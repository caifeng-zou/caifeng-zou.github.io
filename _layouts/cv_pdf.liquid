---
layout: default
---
<style>
  .cv-pdf-container {
    width: 100%;
    min-height: 85vh;
    margin-top: 1rem;
  }
  .cv-pdf-container iframe {
    width: 100%;
    height: 85vh;
    min-height: 600px;
    border: 1px solid #dee2e6;
    border-radius: 4px;
  }
</style>

<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
      {% if page.cv_pdf %}
        <a
          {% if page.cv_pdf contains '://' %}
            href="{{ page.cv_pdf }}"
          {% else %}
            href="{{ page.cv_pdf | relative_url }}"
          {% endif %}
          target="_blank"
          rel="noopener noreferrer"
          class="float-right"
          title="Open PDF in new tab"
        >
          <i class="fa-solid fa-up-right-from-square"></i>
        </a>
      {% endif %}
    </h1>
  </header>

  <article>
    {% if page.cv_pdf %}
      <div class="cv-pdf-container">
        <iframe
          src="{{ page.cv_pdf | relative_url }}#toolbar=1&navpanes=1&scrollbar=1"
          title="Curriculum Vitae"
        ></iframe>
      </div>
    {% else %}
      <p>Please set <code>cv_pdf</code> in the front matter to the path of your CV PDF (e.g. <code>/assets/pdf/cv.pdf</code>).</p>
    {% endif %}
  </article>
</div>
